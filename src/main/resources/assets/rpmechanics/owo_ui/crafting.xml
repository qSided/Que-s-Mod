<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <!-- This one is for the main Container! -->
                <dropdown id="skill-selection">
                <surface>
                    <flat>#171717</flat>
                    <outline>#121212</outline>
                </surface>
            </dropdown>
                <flow-layout direction="vertical">
                    <children>
                        <item>
                            <stack>minecraft:crafting_table</stack>
                            <sizing>
                                <horizontal method="fill">17</horizontal>
                                <vertical method="fill">30</vertical>
                            </sizing>
                            <positioning type="relative">50,10</positioning>
                        </item>
                        <label>
                            <text translate="true">skills.descriptions.rpmechanics.crafting</text>
                            <horizontal-text-alignment>center</horizontal-text-alignment>
                            <positioning type="relative">50,50</positioning>
                            <max-width>300</max-width>
                        </label>
                        <grid-layout rows="4" columns="3" id="crafting">
                            <children/>
                            <positioning type="relative">50,78</positioning>
                            <surface>
                                <panel dark="true"/>
                             </surface>
                            <padding><all>7</all></padding>
                        </grid-layout>
                    </children>

                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>

                </flow-layout>

            </children>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>